{
  "name": "Bond",
  "version": "1.0",
  "description": "Preview IMDB ratings on HBO",

  "background": {
    "scripts": ["popup.js"],
    "persistent": true
  },

  "permissions": ["tabs", "https://*.hbonordic.com/*"],
  "browser_action": {
    "default_icon": "imdb.png",
    "default_popup": "popup.html"
  },
  "manifest_version": 2
}
